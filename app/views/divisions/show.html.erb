<h1><%= @division.name %></h1>

<% if @division.employees.any? %>
  <h4>Here are the employees associated with this project:</h4>

  <% @division.employees.each do |employee| %>
    <ul>
      <li><%= link_to (employee.first_name + employee.last_name), division_employee_path(@division, employee) %></li>
    </ul>
  <% end %>
<% else %>
  <p>No employees are assigned to this project.</p>
<% end %>

<p><%= link_to "Edit", edit_division_path(@division) %></p>
<p><%= link_to "Delete", division_path(@division),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>

<p><%= link_to "Return to divisions", divisions_path %></p>
